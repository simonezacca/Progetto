<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  	
  	<display-name>NdoVaDo</display-name>
 	<description>
		Sistema gestione prenotazioni per BB e case vacanze. 
	</description>

	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

  	<welcome-file-list>
	    <welcome-file>index.jsp</welcome-file>
	    <welcome-file>PaginaPrincipale.jsp</welcome-file>
  	</welcome-file-list>
  
	<servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>
            com.ndovado.webapp.servlet.IndexServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/indexservlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RegistrazioneUtenteServlet</servlet-name>
        <servlet-class>
            com.ndovado.webapp.servlet.RegistrazioneUtenteServlet
        </servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrazioneUtenteServlet</servlet-name>
        <url-pattern>/registrazione</url-pattern>
    </servlet-mapping>
    
</web-app>